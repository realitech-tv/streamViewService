{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/response.schema.json",
  "title": "streamViewService API Response Schema",
  "type": "object",
  "properties": {
    "streamtype": {
      "type": "string",
      "enum": ["hls", "dash", "invalid"],
      "description": "The type of the stream"
    },
    "hls": {
      "type": "object",
      "properties": {
        "variants": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "bandwidth": {
                "type": "number",
                "description": "Bitrate in bits per second"
              },
              "codec": {
                "type": "string",
                "description": "Codec information"
              },
              "resolution": {
                "type": "string",
                "description": "Video resolution"
              },
              "uri": {
                "type": "string",
                "description": "Child manifest URI for this variant level"
              }
            },
            "required": ["bandwidth"]
          },
          "description": "List of variant streams from the manifest"
        }
      },
      "description": "HLS stream details"
    },
    "dash": {
      "type": "object",
      "description": "DASH stream details (to be completed)"
    }
  },
  "required": ["streamtype"]
}
